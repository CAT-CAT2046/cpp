{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "debug",
            "command": "/usr/bin/g++-9",
            "args": [
                "-g",
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-O0",
                "-DONLINE_JUDGE",
                "-I/opt/boost/include/",
                "-L/opt/boost/lib/",
                "-I/opt/ac-library/",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "コンパイラ: /usr/bin/g++-9"
        }
    ]
}
